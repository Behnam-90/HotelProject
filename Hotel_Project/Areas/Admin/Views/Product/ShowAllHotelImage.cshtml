@using Hotel_Project.ViewModels.Product.HotelImage;
@model HotelImageDto
@{
    ViewData["Title"] = "ShowAllHotelImage";
}


<div class="mt-4">
    <div class="row align-items-center">

        <div class="pb-3">
            <a asp-controller="Product" asp-action="InsertHotelImage" asp-route-Id="@Model.Id" class=" btn btn-outline-primary">افزودن تصویر</a>
        </div>
        @if (Model.hotelGalleries.Any())
        {
            @foreach (var item in Model.hotelGalleries)
            {
                <div class="col-lg-4 col-md-6 py-3 row justify-content-center">

                    <img class="img-thumbnail gallery-img" src="/asset/img/HotelImages/@item.ImageName" alt="" />
                    <a class="btn btn-outline-danger w-50 mt-3" asp-controller="Product" asp-action="RemoveFormHotelImage" asp-route-Id="@item.Id">حذف </a>
                </div>
            }

        }else
        {
            <p> در حال حاضر هیچ عکسی ثبت نشده است</p>
        }

    

    </div>

</div>