@model IEnumerable<Hotel>
@{
    ViewData["Title"] = "GetAllHotel";
}

<h1>لیست هتل ها </h1>


<div class="container">
    <h2 class="py-3">لیست هتل ها</h2>
    <div class="row">
        <div class="col-12 pb-3">
            <a asp-action="CreateHotel" class="btn btn-outline-primary">ایحاد هتل  </a>
        </div>
        <div class="col-12">
            <div class="admin-table ">
                <table class="table">
                    <thead>
                        <tr class="table-secondary">
                            <th>عنوان</th>
                            <th>وضعیت</th>
                            <th> تعداد اتاق</th>
                            <th> مکمل ها </th>
                            <th>اتاق ها</th>
                            <th>عملیات</th>


                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Titel</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <button class="btn btn-success">فعال </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-danger"> غیر فعال</button>
                                        }
                                    </td>
                                    <td>@item.RommeCount</td>

                                    <td><a href="#" class="btn btn-sm btn-outline-primary"> تصاویر</a></td>

                                    <td><a href="#" class="btn btn-sm btn-outline-primary"> قوانین</a></td>

                                    <td><a href="#" class="btn btn-sm btn-outline-primary"> اتاق ها</a></td>



                                    <td>
                                        <a asp-controller="Product" asp-action="EditHotel" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-warning">ویرایش</a>
                                        <a asp-controller="Product" asp-action="RemoveHotel" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-danger ms-2">حذف</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>درحال حاضر هتلی ثبت نشده است </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
