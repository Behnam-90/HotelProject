@model IEnumerable<HotelRule>
@{
    ViewData["Title"] = "ShowAllRule";
}




<div class="container">
    <h2 class="py-3">لیست قوانین </h2>
    <div class="row">
        <div class="col-12 pb-3">
            <a asp-action="" class="btn btn-outline-primary">ثیت قوانین </a>
        </div>
        @if (Model.Any())
        {
            
        <div class="col-12">
            <div class="admin-table ">
                <table class="table">
                    <thead>
                        <tr class="table-secondary">
                            <th>قوانین</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                         
                                <td>@item.Description</td>
                                <td>
                                    <a asp-controller="" asp-action="" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-warning">ویرایش</a>
                                    <a asp-controller="" asp-action="" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-danger ms-2">حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        } else{
     
            <div>
                <p> در حال حاضر قانونی ثبت نشده است</p>
            </div>
        }
    </div>
</div>