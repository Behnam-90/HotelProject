@using Hotel_Project.ViewModels.Product.HotelRule;
@model HotelRuleDto
@{
    ViewData["Title"] = "InsertHotelRule";
    int Id = ViewBag.HotelId;
}

<h1>InsertHotelRule</h1>

<div class="container">
    <h3 class="p-3">افزودن قوانین  </h3>
    <form asp-action="InsertHotelRule" method="post">
        <input asp-for="Id" type="hidden" value="@Id" />
        <div class="row">
            <div class="mb-3 col-6">
                <label asp-for="Description" class="form-label"></label>
                <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
             <div class="mb-3">
                 <button type="submit" class="btn btn-success ">افزودن قانون</button>
             </div>
        </div>

    </form>
</div>